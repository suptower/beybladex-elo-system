[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
ignore = 
    # Allow usage of os.system("") for ANSI color enablement on Windows
    W503,
extend-ignore = E203
per-file-ignores =
    # Allow long lines in documentation table at end of file
    src/advanced_stats.py:E501
    # Allow long lines in embedded JavaScript/HTML code
    src/visualization/meta_landscape.py:E501
    # Allow whitespace in embedded HTML templates
    src/visualization/tier_flow.py:E501,W291,W293
    # Allow imports after sys.path modification in test files
    tests/*.py:E402
